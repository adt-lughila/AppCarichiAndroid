<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineSx"
        app:layout_constraintEnd_toEndOf="@id/guidelineFornitore"
        app:layout_constraintTop_toBottomOf="@id/guidelineParent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fornitore"
            android:layout_gravity="center"
            android:textAlignment="center"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/fornitore"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_height="wrap_content"
            android:text="PENTADESIGN di Vittorio Romboli e c. SNC ffffff"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineFornitore"
        app:layout_constraintEnd_toEndOf="@id/guidelineCliente"
        app:layout_constraintTop_toBottomOf="@id/guidelineParent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:layout_gravity="center"
            android:textAlignment="center"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:minLines="1"
            android:maxLines="5"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineCliente"
        app:layout_constraintEnd_toEndOf="@id/guidelineTipoOrdine"
        app:layout_constraintTop_toBottomOf="@id/guidelineParent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo ordine"
            android:textAlignment="center"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="@id/guidelineCliente"
            app:layout_constraintEnd_toEndOf="@id/guidelineTipoOrdine"
            app:layout_constraintTop_toBottomOf="@id/guidelineParent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tipoordine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QJDUACA"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/guidelineDati"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineTipoOrdine"
        app:layout_constraintEnd_toEndOf="@id/guidelineLuogoConsegna"
        app:layout_constraintTop_toBottomOf="@id/guidelineParent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luogo consegna"
            android:textAlignment="center"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/guidelineParent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/luogo_consegna_ordine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roma"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/guidelineDati"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineLuogoConsegna"
        app:layout_constraintEnd_toEndOf="@id/guidelineTotaleColli"
        app:layout_constraintTop_toBottomOf="@id/guidelineParent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Totale colli"
            android:textAlignment="center"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/guidelineParent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tot_colli_ordine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/guidelineDati"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineFornitore"
        app:layout_constraintEnd_toEndOf="@id/guidelineCliente"
        app:layout_constraintTop_toBottomOf="@id/guidelineParent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineTotaleColli"
        app:layout_constraintEnd_toEndOf="@id/guidelineColliConsegnati"
        app:layout_constraintTop_toBottomOf="@id/guidelineParent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colli consegnati"
            android:textAlignment="center"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/guidelineParent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/colli_consegnati_ordine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/guidelineDati"
            />

    </LinearLayout>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFornitore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTipoOrdine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLuogoConsegna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTotaleColli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineColliConsegnati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />




</androidx.constraintlayout.widget.ConstraintLayout>

