<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/lightgray"
    android:layout_width="match_parent"
    android:descendantFocusability = "blocksDescendants"
    android:layout_height="80dp">


    <LinearLayout
        android:id="@+id/layy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stato_rigaordine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/redcircle" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CODICE ARTICOLO"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/codicearticolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CODICE ARTICOLO"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MATRICOLA"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/matricola"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPO 2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BARCODE"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPO 3"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DESCRIZIONE"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/descrizione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPO 4"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PEZZI ORDINATI"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/pezziordinati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPO 5"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PEZZI SPEDITI"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/pezzispediti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPO 6"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCONTO"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/sconto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPO 7"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PREZZO"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/prezzo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPO 8"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/insertnota"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="5dp"
                    android:onClick="insertNota"
                    android:src="@drawable/scrivinota"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/checknote"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:onClick="checkNote"
                    android:src="@drawable/legginota"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/spuntabutton"
            android:layout_width="95dp"
            android:layout_height="100px"
            android:backgroundTint="#cb504d"
            android:text="SPUNTA"
            android:textColor="@color/white" />




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/layy"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/black" />

</RelativeLayout>