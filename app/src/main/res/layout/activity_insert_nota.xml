<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/insertNotaView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tiponotacommento"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_gravity="center_vertical"
            android:text="TIPO NOTA"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_gravity="center_vertical"
            android:text="COMMENTO"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/spinnerandedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tiponotacommento"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnernota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:entries="@array/tiponote" />

        <EditText
            android:id="@+id/commentonota"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerandedit"
        android:orientation="horizontal">

        <Button
            android:id="@+id/salvanota"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="325dp"
            android:layout_marginTop="40dp"
            android:background="#CB504D"
            android:text="SALVA NOTA"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>