<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/lightgray"
    android:layout_width="match_parent"
    android:descendantFocusability = "blocksDescendants"
    android:layout_height="90dp">

    <LinearLayout
        android:id="@+id/layy"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stato carico"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/greencircle" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Codice"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/codiceCarico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="800"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destinazione"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/destinazione"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="800"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Totale colli"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tot_colli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="800"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Colli censiti"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/colli_censiti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="800"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stato spedizione"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/stato_spedizione"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="800"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Numero sedute"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/num_sedute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="800"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                         />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layy"
        android:backgroundTint="@color/black" />

</RelativeLayout>
